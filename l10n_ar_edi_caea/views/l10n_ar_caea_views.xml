<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_ar_caea_view_form" model="ir.ui.view">
        <field name="name">l10n.ar.caea.view.form</field>
        <field name="model">l10n.ar.caea</field>
        <field name="arch" type="xml">
            <form string="CAEA">
                <header>
                    <button name="action_request_caea_from_afip" string="Request CAEA" type="object"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" modifiers="{}">
                        <button class="oe_stat_button" type="object" name="action_view_moves" ontext="{'default_l10n_ar_caea_id': active_id}">
                            <field string="Invoices" name="moves_count" widget="statinfo" modifiers="{'readonly':true}"/>
                        </button>
                    </div>
                    <h1>
                        <field attrs="{'readonly': True}" name="name"/>
                    </h1>
                    <group>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="period"/>
                        <field name="order"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="informed"/>
                        <field name="process_deadline"/>
                        <field name="process_datetime"/>
                    </group>
                    <group>
                        <button name="action_get_caea_pos" states="active" string="Update autorized CAEA pos" type="object"/>
                        <button name="action_report_no_invoices" states="active" string="report no invoices" type="object"/>
                        <field attrs="{'readonly':True}" name="journal_ids">
                            <tree string="Journals">
                                <field invisible="True" name="id"/>
                                <field name="name"/>
                                <field name="l10n_ar_afip_pos_number"/>
                                <field name="l10n_ar_afip_pos_system"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="l10n_ar_caea_view_tree" model="ir.ui.view">
        <field name="name">l10n.ar.caea.view.tree</field>
        <field name="model">l10n.ar.caea</field>
        <field name="arch" type="xml">
            <tree string="CAEA">
                <field name="name"/>
                <!-- <field name="month" optional="true"/>
                <field name="year" optional="true"/> -->
                <field name="order"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="l10n_ar_caea_action" model="ir.actions.act_window">
        <field name="name">CAEA</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n.ar.caea</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="CAEA" action="l10n_ar_caea_action" id="menu_action_caea" parent="l10n_ar_edi.menu_afipws"/>

</odoo>
